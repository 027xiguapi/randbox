{
  "name": "@randbox/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "RandBox - Utility library to generate anything random with TypeScript support",
  "homepage": "https://randbox.top",
  "author": "027xiguapi <458813868@qq.com>",
  "bugs": {
    "url": "https://github.com/027xiguapi/randbox/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/027xiguapi/randbox.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.x",
    "pnpm": ">=9.x"
  },
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @randbox/core build",
    "build:vue": "pnpm --filter @randbox/vue build",
    "dev:core": "pnpm --filter randbox dev",
    "dev:react": "pnpm --filter @randbox/react dev",
    "dev:vue": "pnpm --filter @randbox/vue dev",
    "test": "pnpm -r test",
    "test:core": "pnpm --filter @randbox/core test",
    "test:vue": "pnpm --filter @randbox/vue test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:deps": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "docs:build": "pnpm --filter @randbox/docs build",
    "docs:dev": "pnpm --filter @randbox/docs dev"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^20.0.0",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "ava": "^6.4.1",
    "coveralls": "^3.1.1",
    "docpress": "0.7.1",
    "eslint": "^8.57.0",
    "git-update-ghpages": "1.3.0",
    "lodash": "^4.17.21",
    "nyc": "^15.1.0",
    "rollup": "^4.52.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vitest": "^3.2.4",
    "vue": "^3.4.0",
    "vue-tsc": "^2.0.0"
  },
  "keywords": [
    "randbox",
    "random",
    "generator",
    "test",
    "mersenne",
    "typescript",
    "utility",
    "vue",
    "vue3",
    "components",
    "games",
    "lottery",
    "monorepo"
  ],
  "github": "https://github.com/027xiguapi/randbox",
  "maintainers": [
    {
      "name": "027xiguapi",
      "email": "458813868@qq.com",
      "web": "https://randbox.top/"
    }
  ],
  "workspaces": [
    "packages/*"
  ]
}
